@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
         @*   <td><a asp-controller="cheese" asp-action="Edit" asp-route-cheeseID="@cheese.ID"> Edit</a></td> *@
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<p>
    <a asp-controller="Cheese" asp-action="Add">Add </a>
    <a asp-controller="cheese" asp-action="Remove">Remove</a>
</p>
